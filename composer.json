{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel-scout/elasticsearch",
    "type": "library",
    "description": "Laravel Scout driver for Elasticsearch with advanced features like zero-downtime reindexing and lazy backfill",
    "keywords": ["laravel", "scout", "elasticsearch", "search", "driver"],
    "license": "MIT",
    "authors": [
        {
            "name": "Prakash Joshi",
            "email": "developer.prakashjoshi@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "elasticsearch/elasticsearch": "^8.0",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "laravel/scout": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelScout\\Elasticsearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelScout\\Elasticsearch\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelScout\\Elasticsearch\\Providers\\ElasticsearchServiceProvider"
            ],
            "config": [
                "config/scout.php"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
